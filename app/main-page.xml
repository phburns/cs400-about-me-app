<Page xmlns="http://schemas.nativescript.org/tns.xsd" actionBarHidden="true">
    <GridLayout rows="auto, *, auto" class="page">
        <StackLayout row="0" class="header"></StackLayout>
<StackLayout row="0" class="home-icon">
    <Image src="https://img.icons8.com/ios-filled/50/000000/home--v2.png" class="home-icon" tap="navigateToMainPage"></Image>
</StackLayout>
        <StackLayout row="1" class="content">
            <Label text="About Me" class="header-title"></Label>
            <StackLayout class="headshot-container">
                <Image src="~/images/headshot2.jpg" class="headshot"></Image>

                <StackLayout class="nav-buttons">
                <Button text="Bio" class="about-me-button" tap="navigateToAboutMe"></Button>
                <Button text="Skills" class="skills-button" tap="navigateToSkills"></Button>
                <Button text="Contact Me" class="contact-me-button" tap="navigateToContactMe"></Button>
            </StackLayout>
</StackLayout>
</StackLayout>

        <StackLayout row="2" class="footer">
            <StackLayout class="footer-container">
                <Button text="Next" class="skills-button" tap="navigateToAboutMe"></Button>
            </StackLayout>
        </StackLayout>
    </GridLayout>
</Page>
